<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Mawruth" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="fontFamily">@font/cairo_medium</item>
        <item name="colorPrimary">@color/mainBtn</item>
        <item name="android:colorPrimary">@color/darkBrown</item>
        <item name="backgroundColor">@color/white</item>
<!--        <item name="colorOnPrimaryContainer">@color/whiteSand</item>-->
    </style>

    <style name="Theme.Mawruth" parent="Base.Theme.Mawruth" />

    <style name="heroBtn" parent="Widget.AppCompat.ButtonBar">
        <item name="android:background">@drawable/btn_gradient</item>
        <item name="fontFamily">@font/cairo_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="menuItem" parent="Base.Theme.Mawruth">
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="toolbarTitle" parent="Base.Theme.Mawruth">
        <item name="fontFamily">@font/cairo_semibold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/lightSand</item>

    </style>

    <style name="searchstyly" parent="ShapeAppearanceOverlay.Material3.SearchBar">
        <item name="background">@drawable/edit_button_back</item>
    </style>

    <style name="strokeBtn" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="fontFamily">@font/cairo_medium</item>
        <item name="android:textColor">#A17C48</item>
        <item name="android:textSize">18sp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#A17C48</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:background">@color/transparent</item>
    </style>


</resources>