<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.confirmEmail.ConfirmEmailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/email_confiem">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="أكد بريدك الإلكتروني"
        android:textColor="@color/darkBrown"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/cairo_regular"
        android:text="@string/confirmation_textx"
        android:textAlignment="center"
        android:textColor="#262C26"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:outlineSpotShadowColor="@color/paragraph"
            android:textColorHint="@color/inputIcons"
            android:textDirection="locale"
            app:boxBackgroundColor="#F1F0EB"
            app:boxStrokeColor="#B9A474"
            app:boxStrokeWidth="0dp"
            app:cursorColor="@color/darkBrown"
            app:hintEnabled="false"
            app:placeholderTextColor="@color/darkBrown"
            tools:targetApi="p">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:cursorVisible="false"
                android:drawablePadding="10dp"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center"
                android:hint="-"
                android:imeOptions="actionNext"

                android:inputType="number"
                android:maxEms="1"
                android:maxLength="1"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#B9A474"
                android:textColorHighlight="@color/mainSand"
                android:textSize="24sp"
                tools:targetApi="upside_down_cake">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:outlineSpotShadowColor="@color/paragraph"
            android:textColorHint="@color/inputIcons"
            android:textDirection="locale"
            app:boxBackgroundColor="#F1F0EB"
            app:boxStrokeColor="#B9A474"
            app:boxStrokeWidth="0dp"
            app:cursorColor="@color/darkBrown"
            app:hintEnabled="false"
            app:placeholderTextColor="@color/darkBrown"
            tools:targetApi="p">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:cursorVisible="false"
                android:drawablePadding="10dp"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center"
                android:hint="-"
                android:imeOptions="actionNext"

                android:inputType="number"
                android:maxEms="1"
                android:maxLength="1"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#B9A474"
                android:textColorHighlight="@color/mainSand"
                android:textSize="24sp"
                tools:targetApi="upside_down_cake">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:outlineSpotShadowColor="@color/paragraph"
            android:textColorHint="@color/inputIcons"
            android:textDirection="locale"
            app:boxBackgroundColor="#F1F0EB"
            app:boxStrokeColor="#B9A474"
            app:boxStrokeWidth="0dp"
            app:cursorColor="@color/darkBrown"
            app:hintEnabled="false"
            app:placeholderTextColor="@color/darkBrown"
            tools:targetApi="p">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:cursorVisible="false"
                android:drawablePadding="10dp"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center"
                android:hint="-"
                android:imeOptions="actionNext"

                android:inputType="number"
                android:maxEms="1"
                android:maxLength="1"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#B9A474"
                android:textColorHighlight="@color/mainSand"
                android:textSize="24sp"
                tools:targetApi="upside_down_cake">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:outlineSpotShadowColor="@color/paragraph"
            android:textColorHint="@color/inputIcons"
            android:textDirection="locale"
            app:boxBackgroundColor="#F1F0EB"
            app:boxStrokeColor="#B9A474"
            app:boxStrokeWidth="0dp"
            app:cursorColor="@color/darkBrown"
            app:hintEnabled="false"
            app:placeholderTextColor="@color/darkBrown"
            tools:targetApi="p">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:cursorVisible="false"
                android:drawablePadding="10dp"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center"
                android:hint="-"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxEms="1"
                android:maxLength="1"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#B9A474"
                android:textColorHighlight="@color/mainSand"
                android:textSize="24sp"
                tools:targetApi="upside_down_cake">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/cairo_semibold"
            android:text="1:00"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ستنتهي صلاحية الرمز بعد:"
            android:textColor="#A17C48"
            android:textSize="18sp">

        </TextView>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:enabled="false"
        android:text="تحقق"

        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:iconSize="25dp"
        app:iconTint="@color/mainBtn">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logInBtn"
        style="@style/strokeBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:text="إعادة الإرسال"
        app:iconGravity="textEnd"
        app:iconSize="25dp"
        app:iconTint="@color/mainBtn">

    </com.google.android.material.button.MaterialButton>


</LinearLayout>