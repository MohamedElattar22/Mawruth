<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="end"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:fontFamily="@font/cairo_semibold"
        android:text="معلومات أساسية"
        android:textColor="@color/darkBrown"
        android:textSize="@dimen/_21ssp">

    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:src="@drawable/seperator">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:fontFamily="@font/cairo_regular"
        android:text="المتحف المصري"
        android:textColor="#B3332B1A"
        android:textSize="@dimen/_16ssp"
        app:drawableEndCompat="@drawable/map_loc">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:fontFamily="@font/cairo_regular"
        android:text="4.9"
        android:textColor="#B3332B1A"
        android:textSize="@dimen/_16ssp"
        app:drawableEndCompat="@drawable/rating">

    </TextView>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mainSand"
            android:fontFamily="@font/cairo_medium"
            android:text="تاريخي"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:chipStrokeWidth="0dp">

        </com.google.android.material.chip.Chip>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mainSand"
            android:fontFamily="@font/cairo_semibold"
            android:text="تاريخي"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:chipStrokeWidth="0dp">

        </com.google.android.material.chip.Chip>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mainSand"

            android:fontFamily="@font/cairo_semibold"
            android:text="تاريخي"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:chipStrokeWidth="0dp">

        </com.google.android.material.chip.Chip>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mainSand"
            android:fontFamily="@font/cairo_semibold"
            android:text="تاريخي"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:chipStrokeWidth="0dp">

        </com.google.android.material.chip.Chip>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mainSand"
            android:fontFamily="@font/cairo_semibold"
            android:text="تاريخي"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:chipStrokeWidth="0dp">

        </com.google.android.material.chip.Chip>
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:fontFamily="@font/cairo_semibold"
        android:text="عن القطعة"
        android:textColor="@color/darkBrown"
        android:textSize="@dimen/_21ssp">

    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:src="@drawable/seperator">

    </ImageView>

    <TextView
        android:id="@+id/descritptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_regular"
        android:padding="@dimen/_20sdp"
        android:text="@string/museum_descrip"
        android:textColor="#B3332B1A"
        android:textSize="@dimen/_14ssp">

    </TextView>


</LinearLayout>