<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/emailbackground"
    android:padding="@dimen/_8sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        app:cardElevation="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/hall_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/no_pic" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/hall_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:text="الأموي و العباسي"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintEnd_toStartOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView" />

    <TextView
        android:id="@+id/hall_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="القاعة 1"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintEnd_toEndOf="@+id/hall_name"
        app:layout_constraintStart_toStartOf="@+id/hall_name"
        app:layout_constraintTop_toBottomOf="@+id/hall_name" />

    <ImageButton
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_50sdp"
        android:backgroundTint="@color/whiteSand"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>